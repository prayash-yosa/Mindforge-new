# Server
PORT=3000
NODE_ENV=development

# HTTPS enforcement (set to "true" in production behind LB)
ENFORCE_HTTPS=false

# Trust proxy (set to "true" when behind a load balancer / reverse proxy)
TRUST_PROXY=false

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3001

# Rate limiting defaults
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
