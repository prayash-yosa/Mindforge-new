# ============================================
# Mindforge Backend — Environment Variables
# Copy to .env and fill in values.
# Never commit .env to version control.
# ============================================

# Server
PORT=3000
NODE_ENV=development

# HTTPS enforcement (set to "true" in production behind LB)
ENFORCE_HTTPS=false

# Trust proxy (set to "true" when behind load balancer / reverse proxy)
TRUST_PROXY=false

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3001

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# JWT (Task 1.2) — in production, load from secrets vault (Task 8.2)
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_use_vault
JWT_EXPIRES_IN=1h

# Database (PostgreSQL) — Task 2.1
# DATABASE_URL=postgres://user:password@localhost:5432/mindforge
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=mindforge
# DB_PASSWORD=
# DB_NAME=mindforge
# In dev without Postgres, SQLite in-memory is used automatically.
# To persist dev data to file: SQLITE_PATH=./dev.sqlite

# AI Provider (Task 4.1) — DeepSeek API (OpenAI-compatible)
AI_BASE_URL=https://api.deepseek.com/v1
AI_API_KEY=your-deepseek-api-key-here
AI_GRADING_MODEL=deepseek-chat
AI_FEEDBACK_MODEL=deepseek-chat
AI_TIMEOUT_MS=10000
AI_MAX_TOKENS=512
AI_TEMPERATURE=0.3

# Redis — Task 8.3
# REDIS_URL=redis://localhost:6379

# Secrets vault — Task 8.2
# VAULT_URL=
